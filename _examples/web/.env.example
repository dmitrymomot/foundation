# Application
APP_NAME=foundation-web-example

# Cookie Configuration
COOKIE_SECRETS=change-this-to-a-random-32-char-secret,another-secret-for-rotation
COOKIE_NAME=session
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_HTTP_ONLY=true

# Session Configuration
SESSION_TTL=168h
SESSION_TOUCH_INTERVAL=5m

# PostgreSQL Database Configuration
PG_CONN_URL=postgres://user:password@localhost:5432/dbname?sslmode=disable

# Connection Pool Settings (optional - defaults shown)
# PG_MAX_OPEN_CONNS=10
# PG_MAX_IDLE_CONNS=5
# PG_HEALTHCHECK_PERIOD=1m
# PG_MAX_CONN_IDLE_TIME=10m
# PG_MAX_CONN_LIFETIME=30m

# Database Retry Configuration (optional - defaults shown)
# PG_RETRY_ATTEMPTS=3
# PG_RETRY_INTERVAL=5s

# Database Migrations (optional - defaults shown)
PG_MIGRATIONS_PATH=db/migrations
# PG_MIGRATIONS_TABLE=schema_migrations

# HTTP Server Configuration (optional - defaults shown)
# SERVER_ADDR=:8080
# SERVER_READ_TIMEOUT=15s
